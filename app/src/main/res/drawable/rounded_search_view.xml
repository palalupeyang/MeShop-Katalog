<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow -->
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="#4FAFA6A6" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Rounded Background -->
    <item
        android:left="8dp"
        android:right="8dp"
        android:top="8dp"
        android:bottom="16dp">
        <shape
            android:shape="rectangle">
            <solid android:color="#E5E5E5" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</layer-list>